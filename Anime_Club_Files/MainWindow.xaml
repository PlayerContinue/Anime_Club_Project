<Window x:Class="Anime_Club_Files.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:usercon="clr-namespace:Anime_Club_Files.UserControls"
        Title="MainWindow" Height="350" Width="525"
        >

    <DockPanel>

        <DockPanel.Width>
            <Binding RelativeSource="{RelativeSource TemplatedParent}" Path="ActualWidth"/>
        </DockPanel.Width>
        <DockPanel.Height>

            <Binding RelativeSource="{RelativeSource TemplatedParent}" Path="ActualHeight"/>
        </DockPanel.Height>
        <usercon:WindowsFrame x:Name="main_window" Margin="0"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>

    </DockPanel>
</Window>
